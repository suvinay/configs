[core]
	editor = vim
	autocrlf = false
	safecrlf = true
[user]
	name = Rohan Paul
	email = rohan.cosmos@gmail.com
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    graph = log --oneline --decorate --graph --all
    who = shortlog -s --
    local = log origin/master..HEAD
    untracked = ls-files --others --exclude-standard
    sshow = "!f() { git stash show stash^{/$*} -p; }; f"
    sapply = "!f() { git stash apply stash^{/$*}; }; f"
[color]
	ui = true
